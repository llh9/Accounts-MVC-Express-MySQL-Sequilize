<section class="container">
  <h3 class="gallery-name">{{gallery.name}}</h3>
  <h4>Opening Hour: {{format_time gallery.starting_date}}</h4>
  <h4>Closing Hour: {{format_time gallery.ending_date}}</h4>
  {{#if gallery.profiles}}
  <h4>Profiles: {{gallery.profiles}}</h4>
  {{/if}}
  {{#if gallery.services}}
  <h4>Services: {{gallery.services}}</h4>
  {{/if}}
  {{#if gallery.games}}
  <h4>Games: {{gallery.games}}</h4>
  {{/if}}
  {{#if gallery.videos}}
  <h4>Videos: {{gallery.videos}}</h4>
  {{/if}}
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each gallery.paintings as |painting|}}
    {{> painting-details}}
    {{/each}}
  </section>
</section>
{{else}}
<a href="/login">You must login first to view this page</a>
{{/if}}